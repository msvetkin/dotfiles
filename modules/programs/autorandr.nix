# Some settings from https://pastebin.com/S8m1jnY3
{ config, pkgs, ... }:

{
  programs.autorandr = {
    enable = true;
    profiles = {
      adam = {
        fingerprint = {
          DP-0 = "";
          HDMI-0 = "";
        };
        config = {
          DP-0 = {
            enable = true;
            crtc = 0;
            mode = "3840x2160";
            position = "3328x0";
            primary = true;
            rate = "60.00";
            # dpi = 144;
            # x-prop-non_desktop = 0;
          };
          HDMI-0 = {
            crtc = 1;
            primary = false;
            position = "0x0";
            mode = "2560x1440";
            filter = "bilinear";
            rate = "59.95";
            # x-prop-non_desktop = 0;
            transform = [
              [ 1.299988 0.000000 0.000000 ]
              [ 0.000000 1.299988 0.000000 ]
              [ 0.000000 0.000000 1.000000 ]
            ];
          };
        };
      };
      galactica = {
        fingerprint = {
          DP-2 = "";
          HDMI-0 = "";
          eDP-1-1 = "";
        };
        config = {
          DP-2 = {
            crtc = 2;
            filter = "bilinear";
            mode = "2560x1440";
            position = "0x0";
            rate = "59.95";
            transform = [
              [ 1.299988 0.000000 0.000000 ]
              [ 0.000000 1.299988 0.000000 ]
              [ 0.000000 0.000000 1.000000 ]
            ];
          };
          HDMI-0 = {
            crtc = 1;
            filter = "bilinear";
            mode = "3840x2160";
            position = "3328x0";
            rate = "60.00";
          };
          eDP-1-1 = {
            crtc = 4;
            filter = "bilinear";
            mode = "3840x2160";
            position = "7168x0";
            rate = "60.00";
            primary = true;
            transform = [
              [ 0.799988 0.000000 0.000000 ]
              [ 0.000000 0.799988 0.000000 ]
              [ 0.000000 0.000000 1.000000 ]
            ];
          };
        };
      };
    };
    hooks = {
      postswitch = {
        notify-i3 = "${pkgs.i3}/bin/i3-msg restart";
        #change-background = "${pkgs.variety}/bin/variety --next";
        change-dpi = ''
          case "$(hostname)" in
            default)
              DPI=96
              ;;
            adam)
              DPI=144
              ;;
            galactica)
              DPI=138
              ;;
            *)
              echo "Unknown profile for host: $(hostname)"
              exit 1
          esac

          echo "Xft.dpi: $DPI" | xrdb -merge
        '';
      };
    };
  };

  services.autorandr.enable = true;
}
